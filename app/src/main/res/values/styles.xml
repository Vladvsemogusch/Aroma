<resources>

    <!-- Base application theme. -->
    <style name="AromatequeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryAromateque</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/colorAccent</item>
        <item name="strokeColor">#000000</item>
        <item name="strokeWidth">1.2dp</item>
        <item name="radius">6dp</item>
        <item name="centered">true</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small" />

    <style name="AromatequeTheme.NoActionBar" parent="AromatequeTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.Notes" parent="android:TextAppearance">
        <item name="fontPath">fonts/Georgia-Italic.ttf</item>
    </style>

    <style name="TextViewCustomFont">
        <item name="fontPath">fonts/Georgia-Italic.ttf</item>
    </style>
</resources>
