<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AromatequeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryAromateque</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/main</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AromatequeTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AromatequeTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="AromatequeTheme.NoActionBar" parent="AromatequeTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">@color/colorAccent</item>
        <item name="strokeColor">@color/dark_gray</item>
        <item name="strokeWidth">0.7dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.DeviceDefault.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/star</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="CheckoutDivider">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginStart">@dimen/divider_margin</item>
        <item name="android:layout_marginEnd">@dimen/divider_margin</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="TextAppearance.Notes" parent="android:TextAppearance">
        <item name="fontPath">fonts/Georgia-Italic.ttf</item>
    </style>

    <style name="TextAppearance.ActionbarTitle" parent="android:TextAppearance">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextViewCustomFont">
        <item name="fontPath">fonts/Georgia-Italic.ttf</item>
    </style>

    <style name="MainText" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FilterPriceText" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FilterPriceEditText" parent="android:TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
